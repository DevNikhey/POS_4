<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Kreuzung"
    x:Class="Kreuzung.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="450"
    Width="450">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel>
                <Label Content="North" HorizontalAlignment="Center"/>
                <ListBox x:Name="N">
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel>
                <Label Content="South" HorizontalAlignment="Center"/>
                <ListBox x:Name="S">
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel>
                <Label Content="West" HorizontalAlignment="Center"/>
                <ListBox x:Name="W">
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel>
                <Label Content="East" HorizontalAlignment="Center"/>
                <ListBox x:Name="E">
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Red" BorderThickness="3" Margin="5">
            <StackPanel>
                <Label Content="Kreuzung" HorizontalAlignment="Center"/>
                <ListBox x:Name="K">
                    <ListBoxItem>Kreuzung</ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Grid.Column="3">
            <StackPanel>
                <TextBox x:Name="AI" Text="Amount of Cars" Margin="20px"></TextBox>
                <Button Click="Button_Click" Content="Start"></Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
