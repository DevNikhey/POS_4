<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Library">
    <Style TargetType="{x:Type local:RatingControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RatingControl}">
                    <Grid>
                        <Grid Background="Transparent" Margin="0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image x:Name="PART_STARF_1" Grid.Column="0" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_selected.png" />
                            <Image x:Name="PART_STARF_2" Grid.Column="1" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_selected.png" />
                            <Image x:Name="PART_STARF_3" Grid.Column="2" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_selected.png" />
                            <Image x:Name="PART_STARF_4" Grid.Column="3" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_selected.png" />
                            <Image x:Name="PART_STARF_5" Grid.Column="4" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_selected.png" />

                            <Image x:Name="PART_STARE_1" Grid.Column="0" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_unselected.png" />
                            <Image x:Name="PART_STARE_2" Grid.Column="1" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_unselected.png" />
                            <Image x:Name="PART_STARE_3" Grid.Column="2" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_unselected.png" />
                            <Image x:Name="PART_STARE_4" Grid.Column="3" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_unselected.png" />
                            <Image x:Name="PART_STARE_5" Grid.Column="4" Width="48" Height="48" Source="pack://application:,,,/Library;component/Themes/Images/Star_unselected.png" />


                            <TextBlock x:Name="PART_SHOWRATING" HorizontalAlignment="Center" Grid.Column="5" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Rating, Mode=TwoWay}"></TextBlock>
                        </Grid>
                        <Grid>
                            <Button x:Name="PART_DISPLAY" Width="60" Height="40">Hide/Show</Button>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
