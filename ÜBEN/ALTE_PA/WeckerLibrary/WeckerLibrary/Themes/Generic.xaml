<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WeckerLibrary">
    <Style TargetType="{x:Type local:Wecker}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Wecker}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel>
                            <TextBlock Foreground="Red" FontSize="36" 
                               x:Name="PART_CURRENTDATETIME"></TextBlock>
                            <TextBlock Text="{Binding AlarmTime,
                                RelativeSource={RelativeSource TemplatedParent}}" />

                            <TextBlock Text="{Binding Counter,
                                RelativeSource={RelativeSource TemplatedParent}}" />

                            <CheckBox x:Name="PART_CHECKBOXALARMSET" >Alarm Set</CheckBox>
                            <Button x:Name="PART_SETALARMBUTTON" >
                                <StackPanel>
                                    <TextBlock FontSize="24">Set Alarm Time</TextBlock>
                                    <TextBlock FontSize="24" x:Name="PART_SETALARMBUTTONTEXTPANE"></TextBlock>
                                </StackPanel>
                            </Button>

                            <Button x:Name="PART_ADDONETOCOUNTER" >
                                "Increment Counter"
                            </Button>
                            <Button x:Name="PART_REMOVEONETOCOUNTER" >
                                "Reduce Counter"
                            </Button>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
