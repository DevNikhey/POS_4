<Window x:Class="Indicator.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Indicator.TestApp"
        xmlns:indicator="clr-namespace:Indicator;assembly=Indicator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">

            <indicator:CustomControl1
            Minimum="{Binding ElementName=MinSlider, Path=Value}"
            Maximum="{Binding ElementName=MaxSlider, Path=Value}"
            Value="{Binding ElementName=ValueSlider, Path=Value}"
            Width="300"
            Height="300"/>

            <TextBlock Text="Minimum" />
            <Slider x:Name="MinSlider"
            Minimum="0"
            Maximum="100"
            Value="0" />

            <TextBlock Text="Maximum" />
            <Slider x:Name="MaxSlider"
            Minimum="1"
            Maximum="200"
            Value="100" />

            <TextBlock Text="Value"/>
            <Slider x:Name="ValueSlider"
            Minimum="{Binding ElementName=MinSlider, Path=Value}"
            Maximum="{Binding ElementName=MaxSlider, Path=Value}"/>

        </StackPanel>
    </Grid>
</Window>
