<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LoginControl">

    <!-- Link-Button -->
    <Style x:Key="LinkButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="Navy"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">
                        <ContentPresenter/>
                    </TextBlock>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="Red"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type local:CustomControl1}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CustomControl1}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Switch-Link -->
                            <RowDefinition Height="Auto"/>
                            <!-- Email/User -->
                            <RowDefinition Height="Auto"/>
                            <!-- Passwort -->
                            <RowDefinition Height="Auto"/>
                            <!-- Buttons -->
                            <RowDefinition Height="Auto"/>
                            <!-- Fehler -->
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button
                        x:Name="PART_SWITCH_TO_REGISTRATION"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Content="Noch kein Konto? Registrieren"
                        Style="{StaticResource LinkButtonStyle}"
                        HorizontalAlignment="Right"/>

                        <!-- User -->
                        <TextBlock Text="E-Mail / Username" Grid.Row="1"/>
                        <TextBox x:Name="PART_USER" Grid.Row="1" Grid.Column="1"/>

                        <!-- Passwort -->
                        <TextBlock Text="Passwort" Grid.Row="2"/>
                        <PasswordBox x:Name="PART_PASSWORD" Grid.Row="2" Grid.Column="1"/>

                        <!-- Login -->
                        <Button
                        x:Name="PART_LOGIN"
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Content="Login"/>

                        <!-- Fehler -->
                        <TextBlock
                        x:Name="PART_ERROR"
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Foreground="Red"
                        Visibility="Collapsed"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
