<Window x:Class="Verification.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verification.TestApp"
        xmlns:login="clr-namespace:LoginControl;assembly=LoginControl"
        xmlns:registration="clr-namespace:Verification;assembly=Verification"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <login:CustomControl1 x:Name="LoginCtrl"  Width="300" Height="300" Visibility="Visible" SwitchToRegistration="OnSwitchToRegistration" Login="OnLogin" />

        <registration:RegistrationControl    
            x:Name="RegistrationCtrl"
            Width="300"
            Height="300"
            Visibility="Collapsed"
            SwitchtoLogin="OnSwitchToLogin"
            Register="OnRegister"/>

        
    </Grid>
    
</Window>
