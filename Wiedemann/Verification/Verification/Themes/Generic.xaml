<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Verification">

    <!-- ============================= -->
    <!-- Hyperlink-Button-Style (Teil A) -->
    <!-- ============================= -->
    <Style x:Key="LinkButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="Navy"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <TextBlock TextDecorations="Underline">
                        <ContentPresenter />
                    </TextBlock>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="Red"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ============================= -->
    <!-- CustomControl-Style (PFLICHT) -->
    <!-- ============================= -->
    <Style TargetType="{x:Type local:RegistrationControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RegistrationControl}">
                    <Grid>

                        <!-- Rows -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Columns -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Formularfelder -->
                        <TextBlock Text="Vorname:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="PART_FIRSTNAME" Grid.Row="0" Grid.Column="1"/>

                        <TextBlock Text="Nachname:" Grid.Row="1" Grid.Column="0"/>
                        <TextBox x:Name="PART_LASTNAME" Grid.Row="1" Grid.Column="1"/>

                        <TextBlock Text="E-Mail:" Grid.Row="2" Grid.Column="0"/>
                        <TextBox x:Name="PART_EMAIL" Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Username:" Grid.Row="3" Grid.Column="0"/>
                        <TextBox x:Name="PART_USERNAME" Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Passwort:" Grid.Row="4" Grid.Column="0"/>
                        <PasswordBox x:Name="PART_PASSWORD" Grid.Row="4" Grid.Column="1"/>

                        <TextBlock Text="Passwort bestätigen:" Grid.Row="5" Grid.Column="0"/>
                        <PasswordBox x:Name="PART_PASSWORD_CONFIRM" Grid.Row="5" Grid.Column="1"/>

                        <TextBlock Text="Adresse:" Grid.Row="6" Grid.Column="0"/>
                        <TextBox x:Name="PART_ADDRESS" Grid.Row="6" Grid.Column="1"/>

                        <!-- Buttons -->
                        <Grid Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button
                                x:Name="PART_REGISTER"
                                Grid.Column="0"
                                Content="Registrieren"/>

                            <Button
                                x:Name="PART_RESET"
                                Grid.Column="2"
                                Content="Reset"/>

                            <!-- Hyperlink-Button -->
                            <Button
                                x:Name="PART_CANCEL"
                                Grid.Column="4"
                                Content="Zurück zum Login"
                                Style="{StaticResource LinkButtonStyle}"/>
                        </Grid>

                        <!-- Fehlermeldung -->
                        <TextBlock
                            x:Name="PART_ERROR"
                            Grid.Row="8"
                            Grid.ColumnSpan="2"
                            Foreground="Red"
                            Visibility="Collapsed"/>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
